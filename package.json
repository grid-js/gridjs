{
  "name": "gridjs",
  "version": "4.0.0",
  "description": "Advanced table plugin",
  "author": "Afshin Mehrabani <afshin.meh@gmail.com>",
  "license": "MIT",
  "keywords": [
    "grid",
    "table",
    "gridjs",
    "list",
    "filter",
    "search",
    "sort",
    "pagination",
    "react",
    "angular",
    "jquery"
  ],
  "homepage": "https://gridjs.io",
  "repository": "https://github.com/grid-js/gridjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*",
    "i18n/dist/*",
    "plugins/!(node_modules)/dist/*"
  ],
  "exports": {
    ".": {
      "browser": "./dist/gridjs.module.js",
      "umd": "./dist/gridjs.umd.js",
      "import": "./dist/gridjs.mjs",
      "require": "./dist/gridjs.js"
    },
    "./legacy": {
      "umd": "./dist/gridjs.production.min.js",
      "browser": "./dist/gridjs.production.es.min.js"
    },
    "./i18n": {
      "browser": "./i18n/dist/i18n.module.js",
      "umd": "./i18n/dist/i18n.umd.js",
      "require": "./i18n/dist/i18n.js",
      "import": "./i18n/dist/i18n.mjs"
    },
    "./plugins/selection": {
      "browser": "./plugins/selection/dist/selection.module.js",
      "umd": "./plugins/selection/dist/selection.umd.js",
      "require": "./plugins/selection/dist/selection.js",
      "import": "./plugins/selection/dist/selection.mjs"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "main": "dist/gridjs.js",
  "module": "dist/gridjs.module.js",
  "umd:main": "dist/gridjs.umd.js",
  "source": "index.ts",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.0",
    "@types/jest-axe": "^3.2.2",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "~4.22.0",
    "@typescript-eslint/parser": "~4.22.0",
    "autoprefixer": "^9.8.0",
    "axe-core": "^4.0.0",
    "check-export-map": "^1.1.1",
    "cssnano": "^4.1.11",
    "cypress": "^7.4.0",
    "cypress-visual-regression": "^1.5.7",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.0.0",
    "eslint": "~7.26.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "~24.3.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "~26.6.3",
    "jest-axe": "^4.0.0",
    "jest-extended": "^0.11.5",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "microbundle": "^0.13.0",
    "node-sass": "^5.0.0",
    "node-sass-chokidar": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-nested": "^5.0.5",
    "postcss-scss": "^3.0.5",
    "postcss-sort-media-queries": "^3.10.11",
    "prettier": "~2.2.1",
    "rimraf": "~3.0.2",
    "rollup": "^2.11.2",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-sizes": "^1.0.3",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "source-map-loader": "^2.0.1",
    "start-server-and-test": "^1.12.3",
    "ts-jest": "^26.5.5",
    "ts-loader": "^9.1.1",
    "tsutils": "~3.21.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "postinstall": "find . ! -path '*/node_modules/*' ! -path './package.json' -name 'package.json' -execdir npm install \\;",
    "clean": "rimraf coverage dist tmp i18n/dist 'plugins/!(node_modules)/dist'",
    "prebuild": "npm run clean",
    "build": "run-p build:grid build:i18n build:plugins build:themes",
    "build:grid": "microbundle build --raw --external none --tsconfig tsconfig.release.json",
    "build:i18n": "microbundle build --raw --cwd i18n --tsconfig i18n/tsconfig.release.json",
    "build:plugins": "microbundle build --raw --cwd plugins/selection --tsconfig plugins/selection/tsconfig.release.json",
    "postbuild": "node config/node-13-exports.js",
    "prebuild:themes": "node-sass --include-path scss src/theme/mermaid/index.scss dist/theme/mermaid.css",
    "build:themes-dev": "postcss dist/theme/mermaid.css --output dist/theme/mermaid.css --env development --verbose",
    "build:themes-prod": "postcss dist/theme/mermaid.css --output dist/theme/mermaid.min.css --env production --verbose",
    "build:themes": "run-p build:themes-dev build:themes-prod",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "run-p lint test:check-exports test:jest test:e2e",
    "test:jest": "jest --coverage",
    "test:cypress": "cd tests && cypress run",
    "test:check-exports": "check-export-map",
    "test:dev-server": "cd tests/dev-server && npm start",
    "test:e2e": "start-server-and-test test:dev-server http://localhost:8080 test:cypress",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "preact": "^10.5.12",
    "tslib": "^2.0.1"
  },
  "changelog": {
    "labels": {
      "new feature": ":rocket: New Feature",
      "breaking": ":boom: Breaking Change",
      "bug fix": ":bug: Bug Fix",
      "polish": ":nail_care: Polish",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal",
      "performance": ":running_woman: Performance"
    },
    "cacheDir": ".changelog"
  }
}
